#:import get_color_from_hex kivy.utils.get_color_from_hex

<CustomOneLineListItem>:
	id: lol
	text: root.text
	on_press:
		app.afficher_definition(self.text)

<ContentNavigationDrawer>:

    BoxLayout:
        orientation: 'vertical'
        #spacing: dp(10)
        padding: dp(10)

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            padding: [0, 50, 0, 10]

            MDTextFieldRect:
                id: search_field
                hint_text: 'Entrez le mot Ã  rechercher'
                mode: "fill"
                font_size: 20
                size_hint: 1, None
                focus: root.focus + "lol"
                height: "40dp"
                active_line: True  # Permet de voire la ligne qui souigne le texte saisie
                on_text: root.voir_list_most(self.text, True)
				on_focus: print("on focus")
        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'
            padding: [0, 100, 0, 10]
			do_scroll_x: False
			do_scroll_y: True
			bar_margin: 2
			bar_width: 10
			bar_color: get_color_from_hex("#70a0f0")
			bar_inactive_color: get_color_from_hex("#7fafff")
			scroll_type: ['content', 'bars']
            RecycleBoxLayout:
                padding: dp(10)
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'


<MainScreen>

	MDBoxLayout:
		orientation: "vertical"
		MDToolbar:
			md_bg_color: get_color_from_hex("#7aa6ff")
			#size_hint: 1, 0.08
			title: "Jargon Informatique"
			left_action_items: [["magnify", lambda x: [nav_drawer.set_state("open"), app.text_field()]]]
			right_action_items: [["shuffle-variant", lambda x: app.recherche_aleatoir()], ["dots-vertical", lambda x: app.afficher_definition()]]

		MDBoxLayout:
			orientation: "vertical"
			id: le_contenu
			MDBoxLayout:
				md_bg_color: get_color_from_hex("#70a0f0")
				size_hint: 1, 0.08
				padding: [30, 5, 5, 5]
				MDLabel:
					id: id_kv_mot
					text: root.mot
					font_size: 18
					color: get_color_from_hex("#ffffff")
					bold: True
			MDBoxLayout:
				ScrollView:
					do_scroll_x: False
					do_scroll_y: True
					padding: [12, 40]
					bar_width: 5
					bar_margin: 5
					bar_color: get_color_from_hex("#70a0f0")
					bar_inactive_color: get_color_from_hex("#adc9ff")
					scroll_type: ['bars', 'content']
					MDLabel:
						id: id_kv_definition
						size_hint_y: None
						height: self.texture_size[1]
						text_size: self.width, None
						padding: [12, 40]
						#md_bg_color: get_color_from_hex("#ffffff")
						text: root.definition
						font_size: 20
						halign: 'center'

	MDNavigationDrawer:
		id: nav_drawer
		type: "standard"

		ContentNavigationDrawer:
			#screen_manager: screen_manager
			nav_drawer: nav_drawer


<ResultatScreen>
	MDLabel:
		text: "le texte de l'ecran"